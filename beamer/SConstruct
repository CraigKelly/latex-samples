import os

##########################################################################
# Things to build

#TEX files that should become PDF files (via latex)
TEX_FILES = [
    "sample",
    "large_example",
    "spring_java_config"
]


##########################################################################
# Setup builders and environment

env = Environment(
    ENV = os.environ
)

##########################################################################
# Add builders and dependecies to environment

for base in TEX_FILES:
    pdf = env.PDF(target = base + ".pdf", source = base + ".tex")
